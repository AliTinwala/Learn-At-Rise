@model IEnumerable<MVCADO.NET.Models.StudentModel>

<p>
    @Html.ActionLink("Create New", "AddStudent")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.S_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.S_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.S_Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.S_Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.S_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.S_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.S_Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.S_Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditStudentDetails", new { id=item.S_Id}) |
            @Html.ActionLink("Details", "GetStudentDetailsById", new { id=item.S_Id }) |
            @Html.ActionLink("Delete", "DeleteStudent", new { id=item.S_Id},
            new { onclick = "return confirm('Are you sure you want to delete?');" })
        </td>
    </tr>
}

</table>
